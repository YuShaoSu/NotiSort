<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why do you label this notification as no need to attend? (multi-choice)"
        android:textSize="15dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/not_attend_complete"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/not_finish_button"
            android:text="finish"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/not_attend_0"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:background="@drawable/not_check_small_round_button"
            android:text="  No further information needed  "
            android:layout_margin="5dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/not_attend_1"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:background="@drawable/not_check_small_round_button"
            android:text="  No further action needed  "
            android:layout_margin="5dp"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/not_attend_3"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_margin="5dp"
            android:background="@drawable/not_check_small_round_button"
            android:text="  Not interested  "
            android:textSize="12sp" />

        <Button
            android:id="@+id/not_attend_2"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:background="@drawable/not_check_small_round_button"
            android:text="Other"
            android:layout_margin="5dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/not_attend_2_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="12sp"
            android:ems="80"
            android:paddingLeft="5dp"
            android:textColor="@color/grey_medium"
            android:visibility="invisible"
            />


    </LinearLayout>

</LinearLayout>